<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="Notifications">
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="notifications"
            app:persistent="true"
            app:title="Enable notifications" />
        <SwitchPreferenceCompat
            android:defaultValue="true"
            app:dependency="notifications"
            app:key="notifications2"
            app:persistent="true"
            app:summary="Receive notifications when there is a delivery request"
            app:title="On delivery request" />
        <SwitchPreferenceCompat
            android:defaultValue="true"
            app:dependency="notifications"
            app:key="notifications3"
            app:persistent="true"
            app:summary="Receive notifications when there is a support response message."
            app:title="On support response" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Vibrations">
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="vibrations"
            app:persistent="true"
            app:title="Enable vibrations" />

        <SwitchPreferenceCompat
            app:dependency="vibrations"
            app:key="vibrations2"
            app:persistent="true"
            app:summary="Vibrate when there is a delivery request"
            app:title="On delivery request" />
        <SwitchPreferenceCompat
            app:dependency="vibrations"
            app:key="vibrations3"
            app:persistent="true"
            app:summary="Vibrate when there is a delivery request"
            app:title="On support response" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Account">
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="logged_in"
            app:persistent="true"
            app:summary="Log out after some time of not opening the application."
            app:title="Log out" />

        <ListPreference
            app:defaultValue="1"
            app:dependency="logged_in"
            app:entries="@array/hours"
            app:entryValues="@array/noHours"
            app:key="log_out_time_hours"
            app:persistent="true"
            app:summary="Log out after this number of hours."
            app:title="Timeout hours"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="30"
            app:dependency="logged_in"
            app:entries="@array/minutes"
            app:entryValues="@array/noMinutes"
            app:key="log_out_time_minutes"
            app:persistent="true"
            app:summary="Log out after this number of minutes."
            app:title="Timeout minutes"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:key="change_password"
            app:title="Change password" />
        <Preference
            app:key="log_out_now"
            app:title="Log out now" />
    </PreferenceCategory>
</PreferenceScreen>